{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"plugins": [
			{
				"name": "@nestjs/swagger",
				"options": {
					"classValidatorShim": true,
					"introspectComments": true,
					"dtoFileNameSuffix": [
						".dto.ts",
						".request.ts",
						".response.ts",
						".responses.ts",
						".command.ts",
						".query.ts",
						".result.ts",
						".entity.ts"
					],
					"controllerFileNameSuffix": [
						".controller.ts"
					]
				}
			}
		]
	}
}